<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <%= simple_form_for(@club) do |f| %>
        <%= f.input :name, label: false, placeholder: 'Club name' %>
        <%= f.input :address, label: false, placeholder: 'Address' %>
        <%= f.input :for_who, collection: ['Public', 'Guest-list'], include_blank: false, label: false  %>
        <%= f.input :table_service%>
        <%= f.input :dress_code, label: false, collection: ['Black & White', 'No shorts allowed', 'None', 'Tuxedo'], include_blank: false %>
        <%= f.input :phone, label: false, placeholder: 'Phone number' %>
        <%= f.input :website, label: false, placeholder: 'Website' %>
        <%= f.input :instagram, label: false, placeholder: 'Instagram username' %>
        <%= f.input :facebook, label: false, placeholder: 'Facebook username' %>
        <%= f.association :city, label: false , include_blank: false %>
        <%= f.submit 'Upload club', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
