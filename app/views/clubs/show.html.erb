<div class="row">
    <div class="col-12">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @club.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
              <img src="<%= cl_image_path photo.key %>" class="d-block" alt="...">
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

<div class="container">
  <div class="row my-2">
    <div class="col-12 d-flex justify-content-between">
      <h2><%= @club.name %> Â· <%= @club.city.name %></h2>
      <h2 class="">Rating: <%= @club.average_rating %> <i class="fas fa-star" style="color: #f5bb1b;"></i></h2>
    </div>
    <div class="col-12">
      <hr>
      <div class="club-info-banner">
        <i class="fas fa-map-marker-alt"></i> <h2><%= @club.address %></h2>
      </div>
      <div class="club-info-banner">
        <i class="fas fa-door-open"></i> <h2><%= @club.for_who %></h2>
      </div>
      <div class="club-info-banner">
        <i class="fas fa-tshirt"></i> <h2><%= @club.dress_code %></h2>
      </div>
      <div class="club-info-banner">
        <i class="fas fa-concierge-bell"></i> <h2><%= @club.table_service == true ? 'With table service' : 'No table service' %></h2>
      </div>
    </div>
    <div class="col">
      <h2><strong> </strong></h2>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-12"><hr></div>
    <div class="col-4">
      <%= link_to @club.facebook do  %>
        <i class="fab fa-facebook"></i>
      <% end %>
      </div>
      <div class="col-4">
        <%= link_to @club.instagram do  %>
        <i class="fab fa-instagram"></i>
        <% end %>
      </div>
      <div class="col-4">
        <%= link_to @club.website do  %>
        <i class="fas fa-globe"></i>
      <% end %>
      </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12 col-lg-6 my-2">
        <%= link_to 'Call now', root_url, class: 'btn btn-vibe w-100' %>
      </div>
      <div class="col-sm-12 col-lg-6 my-2">
        <button type="button" class="btn btn-vibe-outline w-100" data-toggle="modal" data-target="#exampleModal">
          Leave review
        </button><%= render 'shared/modal' %>
      </div>
  </div>
  <div class="row ">
    <div class="col-12 my-3">
      <h2 class="heading-2">Similar Clubs</h2>
    </div>
    <% @similar.each do |club| %>
      <div class="col-sm-12 col-lg-4">
          <%= link_to club do  %>
          <div class="card-club">
            <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)),url('<%= cl_image_path club.photos.first.key %>')">
            </div>
            <div class="card-description p-1 d-flex justify-content-between">
              <h2 class="card-title"><%= club.name.truncate(14) %></h2>
              <h2 class=""><i class="fas fa-star"></i>4.5</h2>
            </div>
            <p class="ml-2"><%= club.city.name %></p>
          </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>



