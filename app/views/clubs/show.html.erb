<div class="row">
    <div class="col-12">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @club.photos.each_with_index do |photo, index| %>
            <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
              <img src="<%= cl_image_path photo.key %>" class="d-block" alt="...">
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

<div class="container">


  <div class="row my-2">
    <div class="col-12 d-flex justify-content-between">
      <h2><%= @club.name %> Â· <%= @club.city.name %></h2>
      <h2 class=""><i class="fas fa-star"></i>4.5</h2>
    </div>
    <hr>
    <div class="col-12">
      <hr>
      <h2><strong>Address:</strong> <%= @club.address %></h2>
      <h2><strong>Accessible for: </strong><%= @club.for_who %></h2>
      <h2><strong>Table service: </strong><%= @club.table_service %></h2>
      <h2><strong>Dress code: </strong> <%= @club.dress_code %></h2>
      <h2><strong>Phone: </strong> <%= @club.phone %></h2>
    </div>
  </div>
  <hr>
  <div class="row text-center">
    <div class="col-4">
      <%= link_to @club.facebook do  %>
        <i class="fab fa-facebook"></i>
      <% end %>
      </div>
      <div class="col-4">
        <%= link_to @club.instagram do  %>
        <i class="fab fa-instagram"></i>
        <% end %>
      </div>
      <div class="col-4">
        <%= link_to @club.website do  %>
        <i class="fas fa-globe"></i>
      <% end %>
      </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-sm-12 col-lg-6 my-2">
        <%= link_to 'Call now', root_url, class: 'btn btn-vibe w-100' %>
      </div>
      <div class="col-sm-12 col-lg-6 my-2">
         <%= link_to 'Leave a review', root_url, class: 'btn btn-vibe-outline w-100' %>
      </div>
  </div>
</div>



