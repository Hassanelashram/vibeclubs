<div class="container my-5">
  <div class="row">
    <h2 class="col-12">Clubs in <%= @city.name %></h2>
    <% @city.clubs.each do |club| %>
        <div class="col-sm-12 col-lg-4">
          <%= link_to club do  %>
          <div class="card-club">
            <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)),url('https://images.unsplash.com/photo-1513635269975-59663e0ac1ad?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80')">
            </div>
            <div class="card-description p-1 d-flex justify-content-between">
              <h2 class="card-title"><%= club.name.truncate(11) %></h2>
              <h2 class=""><%= club.average_rating %> <i class="fas fa-star" style="color: #f5bb1b;"></i></h2>
            </div>
            <p class="ml-2"><%= club.city.name %></p>
          </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
